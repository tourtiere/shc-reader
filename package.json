{
	"name": "shc-reader",
	"version": "1.0.0",
	"description": "Smart health cards reader",
	"scripts": {
		"build": "npm run clean && webpack --config ./webpack.config.js --mode production --progress",
		"postbuild": "react-snap",
		"dev": "npm run clean && webpack --config ./webpack.config.js --mode development",
		"dev:watch": "npm run clean && webpack --config ./webpack.config.js --mode development --watch",
		"start": "webpack serve --config ./webpack.config.js --mode development --host 0.0.0.0",
		"clean": "rimraf ./docs"
	},
	"alias": {
		"preact": "./node_modules/preact/dist/preact.min.js"
	},
	"license": "ISC",
	"dependencies": {
		"preact": "^10.5.13"
	},
	"devDependencies": {
		"copy-webpack-plugin": "^8.0.0",
		"css-loader": "^5.2.6",
		"file-loader": "^6.2.0",
		"less": "^4.1.1",
		"less-loader": "^8.0.0",
		"less-plugin-clean-css": "^1.5.1",
		"react-snap": "^1.23.0",
		"rimraf": "^3.0.2",
		"sass": "^1.34.0",
		"sass-loader": "^11.1.1",
		"style-loader": "^2.0.0",
		"ts-loader": "^8.0.18",
		"tsconfig-paths-webpack-plugin": "^3.5.1",
		"typescript": "^4.2.3",
		"webpack": "^5.37.1",
		"webpack-cli": "^4.7.0",
		"webpack-dev-server": "^3.11.2"
	},
	"reactSnap": {
		"source": "dist",
		"puppeteerArgs": [
			"--no-sandbox",
			"--disable-setuid-sandbox"
		]
	}
}
